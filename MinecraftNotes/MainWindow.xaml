<Window x:Class="MinecraftNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Minecraft Notes" Height="550" Width="725" MinHeight="550" MinWidth="725"
        WindowStartupLocation="CenterScreen">
    
    <Grid Loaded="OnLoaded" KeyDown="OnKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="250" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="View">
                <MenuItem Header="Save directory" Click="ViewSaveDirectoryMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Application">
                    <MenuItem Header="Information" Click="ApplicationInformationMenuItem_Click" />
                </MenuItem>
                <MenuItem Header="Developer">
                    <MenuItem Header="GitHub" Click="DeveloperGitHubMenuItem_Click" />
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <GroupBox Grid.Row="1" Header="Information" Margin="15">
            <StackPanel>
                <StackPanel>
                    <Label Margin="15 5 15 0" Content="World's name:" />
                    <TextBox x:Name="WorldNameTextBox" Margin="15 0" />
                </StackPanel>
            
                <StackPanel>
                    <Label Margin="15 5 15 0" Content="World's place name:" />
                    <TextBox x:Name="PlaceNameTextBox" Margin="15 0" />
                </StackPanel>
            
                <StackPanel>
                    <Label Margin="15 5 15 0" Content="World's place location (separate by space):" />
                    <TextBox x:Name="PlaceLocationTextBox" Margin="15 0" />
                </StackPanel>
                
                <Button Margin="15 15 15 0" Content="Add" Click="WorldAddButton_Click" />
            </StackPanel>
        </GroupBox>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="275" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <ListBox x:Name="WorldListBox" Grid.Column="0" Margin="15 0 5 15" SelectionChanged="WorldsListBox_SelectionChanged">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Refresh" Click="WorldRefreshMenuItem_Click" />
                        <MenuItem Header="Delete" Click="WorldDeleteMenuItem_Click" />
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
            
            <ListView x:Name="PlaceListView" Grid.Column="1" Margin="5 0 15 15">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="200" Header="Place name" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Width="200" Header="Location" DisplayMemberBinding="{Binding Location}" />
                    </GridView>
                </ListView.View>
                
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete" Click="PlaceDeleteMenuItem_Click" />
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Grid>
    </Grid>
</Window>
